<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<h2>학사일정상세보기</h2>
<table class="table table-bordered" id="form-table" data-path="${pageContext.request.contextPath }" >
	<tr>
		<th>공지번호</th>
		<td>${noticeboard.ntcCd}</td>
	</tr>
	<tr>
		<th>작성자</th>
		<td>${noticeboard.prsId}</td>
	</tr>
	<tr>
		<th>제목</th>
		<td>${noticeboard.ntcNm}</td>
	</tr>
	<tr>
		<th>첨부파일</th>
		<td>
		<c:forEach items="${noticeboard.atchFile.fileDetails }" var="fd" varStatus="vs">
			<c:url value='/noticeboard/${noticeboard.ntcCd}/atch/${fd.atchFileId }/${fd.fileSn }' var="downUrl"/>
			<a href="${downUrl }">${fd.orignlFileNm }(${fd.fileFancysize })</a>
			${not vs.last ? '|' : ''}
		</c:forEach>
		<c:if test="${empty noticeboard.atchFile.fileDetails}">
		    첨부파일없음
		</c:if>
		</td>
	</tr>
	<tr>
		<th>내용</th>
		<td>${noticeboard.ntcDesc}</td>
	</tr>
	<tr>
		<th>일정시작일</th>
		<td>${noticeboard.ntcDt}</td>
	</tr>
	<tr>
		<th>일정마감일</th>
		<td>${noticeboard.ntcEt}</td>
	</tr>
	
</table>
<a href="<c:url value='/noticeboard/${ntcCd}/edit' />" class="btn btn-primary">수정</a>
<form action="<c:url value='/noticeboard/${noticeboard.ntcCd}/delete' />" method="post" style="display:inline;">
    <button type="submit" class="btn btn-danger">삭제</button>
</form>
<a href="<c:url value='/noticeboard' />" class="btn btn-primary">목록</a>

<!-- 삭제처리는 진짜 삭제처리로 했음 -->

