<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://www.springframework.org/tags/form" prefix="form" %>

<!-- 현재 내가 입장해있는 강의실에 대한 정보 -->

<!-- 과제리스트(공통 내가 입장해있는 강의실의 과제를 보여줌)-->

<h3>과제리스트</h3>
<table id="contextTable" class="table table-primary align-middle table-bordered"  data-path="${pageContext.request.contextPath }">
	<thead>
		<tr>
			<!-- 과제번호는 rownum으로 처리 -->
			<th>번호</th>
			<!--강의번호를 가지고 강의명 추출-->
			<th>강의명</th>
			<th>과제명</th>
			<th>배점</th>
			<th>등록일자</th>
			<th>제출마감일</th>
			<th colspan="2"></th>
		</tr>
	</thead>
	<tbody class="table-group-divider">
		<c:if test="${not empty assignmentList }">
			<c:forEach items="${assignmentList }" var="assignment">
				<tr class="table-light">
					<td class="fw-bold text-center">${assignment.rnum }</td>
					<td colspan="2" class="fw-bold">${assignment.lecture.lectNm }</td>
					<td colspan="2" class="fw-bold"><a href="javascript:void(0);" onclick="">${assignment.assigNm }</a></td>
					<td>${assignment.assigScore}</td>
					<td>${assignment.assigDate }</td>
					<td>${assignment.assigEd }</td>
				</tr>
			</c:forEach>
		</c:if>
		<c:if test="${empty assignmentList }">
			<tr>
				<td colspan="8">과제 없음.</td>
			</tr>
		</c:if>
	</tbody>
	<tfoot>
		<!-- 검색 페이징 area -->
		<tr align="center">
			<td colspan="5">
				<div class="paging-area">
					${pagingHTML }
				</div>
				<div class="search-area" data-pg-target="#searchForm" data-pg-fn-name="fnPaging">
					<form:select path="condition.searchType">
						<form:option value="" label="전체" />
						<form:option value="title" label="제목" />
						<form:option value="writer" label="작성자" />
					</form:select>
					<form:input path="condition.searchWord"/>
					<button class="search-btn">검색</button>
				</div>
			</td>
		</tr>
		
	</tfoot>
</table>
<!-- 권한에 따라 보일지말지 -->


<!-- 검색처리 -->
<form:form id="searchForm" method="get" modelAttribute="condition">
	<form:input type="hidden" path="searchType"/>
	<form:input type="hidden" path="searchWord"/>
	<input type="hidden" name="page" />
</form:form>

<!-- MODAL -->






<script src="${pageContext.request.contextPath }/resources/js/utils/paging.js"></script>