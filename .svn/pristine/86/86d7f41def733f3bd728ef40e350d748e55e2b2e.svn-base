<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://www.springframework.org/tags/form" prefix="form" %>
<style>
    th {
        font-size: 15px; 
    }
	#button1 {
	  display: flex;
	  justify-content: flex-end;
	}
	
	#button1 button {
	  margin-left: 10px; /* 버튼 간 여백 추가 */
	}
</style>

<h4>사용자 목록 조회</h4>
 <c:if test="${not empty message}">
        <div class="alert alert-success">${message}</div>
    </c:if>

    <c:if test="${not empty errorMessage}">
        <div class="alert alert-danger">${errorMessage}</div>
    </c:if>
<div id="button1">
    <button id="singleinsert-btn">사용자 추가 </button>
    <button id="doubleinsert-btn">일괄추가 </button>
</div>
<table class="table table-bordered">
    <thead>
        <tr class="text-center">
            <th>유형</th>
            <th>아이디</th>
            <th>이름</th>
            <th>생년월일</th>
<!--             <th>성별</th> -->
<!--             <th>우편번호</th> -->
<!--             <th>도로명주소</th> -->
<!--             <th>상세주소</th> -->
<!--             <th>핸드폰번호</th> -->
            <th>이메일</th>
            <th>이메일 동의여부</th>
            <th>SMS 동의여부</th>
<!--             <th>인증수단코드</th> -->
            <th>마지막접속일자</th>
            <th>비밀번호 오류횟수</th>
        </tr>
    </thead>
    <tbody>
        <c:if test="${not empty list }">
            <c:forEach items="${list }" var="person">
                <tr>
                    <td class="text-center">${person.personType}</td>
                    <td id="id" class="text-center">${person.id }</td>
                    <td id="id">
                        <a href="javascript:void(0);" onclick="showPersonDetail('${person.id}')">${person.nm}</a>
                    </td>
                    <td>${person.brdt }</td>
<%--                     <td>${person.sexdstnCd }</td> --%>
<%--                     <td>${person.zip }</td> --%>
<%--                     <td>${person.rdnmadr }</td> --%>
<%--                     <td>${person.daddr }</td> --%>
<%--                     <td>${person.mbtlnum }</td> --%>
                    <td>${person.eml }</td>
                    <td class="text-center">${person.emlRcptnAgreYn }</td>
                    <td class="text-center">${person.smsRcptnAgreYn }</td>
<%--                     <td>${person.crtfcMnCd }</td> --%>
                    <td class="text-center">${person.lastConectDe }</td>
                    <td>${person.pswdFailrCo }</td>
                </tr>
            </c:forEach>
        </c:if>
        <c:if test="${empty list }">
            <tr>
                <td colspan="5">회원 없음.</td>
            </tr>
        </c:if>
    </tbody>
</table>






<!-- 상세정보 모달 -->
<div class="modal fade" id="personDetailModal" tabindex="-1" aria-labelledby="personDetailLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="personDetailLabel">사용자 상세 정보</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="personDetailContent">
         <table class="table detail-table">
             <tbody>
             
						<tr>
							<th>아이디:</th>
							<td id="detail-id"></td>
						</tr>
						<tr>
							<th>이름:</th>
							<td id="detail-nm"></td>
						</tr>
						<tr>
							<th>생년월일:</th>
							<td id="detail-brdt"></td>
						</tr>
						<tr>
							<th>성별:</th>
							<td id="detail-sexdstnCd"></td>
						</tr>
						<tr>
							<th>마지막 접속 일자:</th>
							<td id="detail-lastConectDe"></td>
						</tr>
						<tr>
							<th>핸드폰번호:</th>
							<td id="detail-mbtlnum"></td>
						</tr>
						<tr>
							<th>이메일:</th>
							<td id="detail-eml"></td>
						</tr>
						<tr>
							<th>비밀번호 실패 횟수:</th>
							<td id="detail-pswdFailrCo"></td>
						</tr>
						<tr>
							<th>사용자 유형</th>
							<td id="detail-personType"></td>
						</tr>
					</tbody>
         </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">닫기</button>
        <button type="button" class="btn btn-info" data-bs-dismiss="modal"  data-id="${person.id}"  onclick="showPersonUpdate(document.getElementById('detail-id').textContent)">수정</button>
        <button type="button" class="btn btn-danger" data-bs-dismiss="modal">삭제</button>
      </div>
    </div>
  </div>
</div>

<!-- 수정하기 Modal -->
<div class="modal fade" id="personUpdateModal" tabindex="-1" aria-labelledby="updateModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="updateModalLabel">사용자 수정</h1>
      </div>
      <div class="modal-body" id="personUpdateContent">
<!--        데이터 공간 -->
			 <table class="table detail-table">
             <tbody>
						<tr>
							<th>아이디:</th>
							<td id="update-id"></td>
						</tr>
						<tr>
							<th>이름:</th>
							<td id="update-nm"></td>
						</tr>
						<tr>
							<th>생년월일:</th>
							<td id="update-brdt"></td>
						</tr>
						<tr>
							<th>성별:</th>
							<td id="update-sexdstnCd"></td>
						</tr>
						<tr>
							<th>핸드폰번호:</th>
							<td><input type="text" id="update-mbtlnum" name="mbtlnum"></td>
						</tr>
						<tr>
							<th>이메일:</th>
							<td><input type="email" id="update-eml" name="eml"></td>
						</tr>
						<tr>
							<th>비밀번호 실패 횟수:</th>
							<td id="update-pswdFailrCo"></td>
						</tr>
					</tbody>
         </table>


	
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">닫기</button>
        <button type="button" class="btn btn-primary" id="saveUpdateBtn">저장</button>
      </div>
    </div>
  </div>
</div>


<script src="${pageContext.request.contextPath}/resources/js/person/person.js"></script>
