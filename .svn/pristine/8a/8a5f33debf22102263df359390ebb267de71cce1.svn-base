<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@taglib uri="http://java.sun.com/jsp/jstl/functions" prefix="fn" %>
<%@ taglib uri="http://www.springframework.org/security/tags" prefix="security"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/fmt" prefix="fmt" %>

<script>
    const contextPath = "${pageContext.request.contextPath}/";
</script>



<!-- 장학금 카드 -->
<div class="container">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <c:forEach var="award" items="${award}">
            <div class="col">
                <div class="card h-100">
                    <div class="card-body">
                        <h5 class="card-title">${award.awardNm}</h5>
                        <p class="card-text">${award.awardDetail}</p>
                    </div>
                   
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item">금액:&nbsp <fmt:formatNumber value="${award.awardGiveAmt}" type="number" pattern="#,###"/> 원</li>
                        <li class="list-group-item">혜택: &nbsp ${award.awardBenefit}</li>
                        <li class="list-group-item">제출 서류: &nbsp ${award.awardDocument}</li>
                    </ul>
                    <security:authorize access="!hasRole('ADMIN')">
                   <div class="card-footer" style="text-align: right">
				    	 <a href="#" class="card-link">신청하기</a> 
				  </div>
				  </security:authorize>
                </div>
            </div>
        </c:forEach>
    </div>
</div>


