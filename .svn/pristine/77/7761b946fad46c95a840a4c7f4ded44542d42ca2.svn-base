<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@taglib uri="http://www.springframework.org/tags/form" prefix="form"%>
<%@taglib uri="http://java.sun.com/jsp/jstl/functions" prefix="fn"%>



<script>
    const contextPath = "${pageContext.request.contextPath}/";
</script>
<table class="table table-bordered">

	<h4>로그인한 학생이 신청한 장학금 신청 현황</h4>

			<thead>
				<tr>
					<th></th>
					<th>학기번호</th>
					<th>장학금코드</th>
					<th>장학금명</th>
					<th>접수일시</th>
					<th>선발일시</th>
					<th>진행상태</th>
					<th>반려사유</th>
				</tr>
			</thead>
		<tbody>
			<c:if test="${not empty ask }">
				<c:forEach items="${ask }" var = "askList"> 
					<tr>
						<td align="center">
						<input type="checkbox" class="check" name="check" value="${askList.shapDocNo}">
						</td>
						
					
						<td>
					 ${fn:substring(askList.semstrNo, 0, 4)}-${fn:substring(askList.semstrNo, 4, 6)} </td>
						<td> 
						<c:url value="/askAward/${askList.shapDocNo }" var="askAwardUrl"/>
						<a href="${askAwardUrl }">${askList.awardCd }</a>
						</td>
						<td>${askList.awardVO.awardNm}</td>
					
						
						<td>	${fn:split(askList.shapRcptDate, 'T')[0] } ${fn:split(askList.shapRcptDate, 'T')[1] }
					</td>
				<td>	${fn:split(askList.shapChcDate, 'T')[0] } ${fn:split(askList.shapChcDate, 'T')[1] }
					</td>
						
						
						<td>${askList.shapAccCd}</td>
						<td>${askList.shapNoReason}</td>
				
					</tr>

				</c:forEach>	
			</c:if>
		
		</tbody>
</table>
<div align="right">

		<button class="btn btn-info" id ="update-btn">수정</button>
		
		
		
		<form action="<c:url value='/systemBoard/delete/${snbNo}' />" method="post" style="display:inline;">
   
    <button type="submit" class="btn btn-danger">삭제</button>
			</form>

</div>

<script src="${pageContext.request.contextPath}/resources/js/awardAsk/awardAskStuList.js"></script>
