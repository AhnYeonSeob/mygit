function showDetails(institutions) {
    const details = document.getElementById("details");
    const institutionName = document.getElementById("institution-name");
const detailsContent = document.getElementById("details-content");

    // 관련 데이터 가져오기
    const data = scholarshipData.find(item => item.awardEdnstNm === institution);

    // 데이터가 없을 경우 처리
    if (!data || data.length === 0) {
        detailsContent.innerHTML = "<tr><td colspan='2'>관련 정보가 없습니다.</td></tr>";
        details.style.display = "block";
        return;
    }

    // 데이터를 HTML에 표시 (첫 번째 항목만 표시)
    const award = data[0]; // `data` 배열의 첫 번째 객체
  	institutionName.textContent = `${institution}의 세부 정보`;
    document.getElementById("institution-awardNm").textContent = award.awardNm || "N/A";
    document.getElementById("institution-awardType").textContent = award.awardType || "N/A";
    document.getElementById("institution-awardGiveAmt").textContent = award.awardGiveAmt || "N/A";
    document.getElementById("institution-awardDetail").textContent = award.awardDetail || "N/A";
    document.getElementById("institution-awardBenefit").textContent = award.awardBenefit || "N/A";
    document.getElementById("institution-awardDocument").textContent = award.awardDocument || "N/A";

    // 세부 정보 보이기
    details.style.display = "block";
}


