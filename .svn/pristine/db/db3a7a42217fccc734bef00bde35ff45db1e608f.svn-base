


<!-- /Team01Project/src/main/webapp/resources/js/attendcoeva/attendCoevaScript.js -->
<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@ taglib uri="http://www.springframework.org/tags/form" prefix="form"%>


<h1>강의평가 리스트</h1>
<h1>학생은 등록 UI</h1>
<h1>교수는 강의 UI가</h1>
<input type="hidden" id="id" name="id" value="${id }">
<input type="hidden" id="contextPath" name="contextPath" value="${pageContext.request.contextPath }">

<div class="container-fluid" style="margin-top: 20px;">
    <div class="card" style="max-width: 1200px; margin: 0 auto;">
        <div class="card-header bg-primary text-white">
            <h3 class="card-title mb-0">강의평가</h3>
        </div>
        
        <div class="card-body">
            <!-- 검색 영역 -->
            <div class="row mb-4">
                <div class="col-md-8">
                    <div class="input-group">
                        <select id="semBox" class="form-select" style="max-width: 150px;">
                            <option value>학기</option>
                        </select>
                        
                    </div>
                </div>
                
            </div>

            <!-- 테이블 영역 -->
            <div class="table-responsive">
                <table class="table table-bordered table-hover" style="min-width: 800px;">
                    <thead class="table-light">
                        <tr class="text-center">
                            <th style="width: 5%">No</th>
                            <th style="width: 15%">강의명</th>
                            <th style="width: 10%">교수명</th>
                            <th style="width: 10%">신청일자</th>
                            <th style="width: 10%">처리상태</th>
                            <th style="width: 40%">신청내용</th>
                            <th style="width: 10%">관리</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                            <td class="text-center">1</td>
                            <td>자바프로그래밍</td>
                            <td class="text-center">김교수</td>
                            <td class="text-center">2024-01-01</td>
                            <td class="text-center">
                                <span class="badge bg-warning">대기중</span>
                            </td>
                            <td>성적 이의신청합니다.</td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-info" style="margin-right: 5px;">상세</button>
                                <button class="btn btn-sm btn-danger">삭제</button>
                            </td>
                        </tr>
                        <tr>
                            <td class="text-center">2</td>
                            <td>데이터베이스</td>
                            <td class="text-center">이교수</td>
                            <td class="text-center">2024-01-02</td>
                            <td class="text-center">
                                <span class="badge bg-success">승인</span>
                            </td>
                            <td>과제 점수 확인 부탁드립니다.</td>
                            <td class="text-center">
                                <button class="btn btn-sm btn-info" style="margin-right: 5px;">상세</button>
                                <button class="btn btn-sm btn-danger">삭제</button>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>

            
        </div>
    </div>
</div>

<!-- 상세보기 모달 -->
<div class="modal fade" id="detailModal" tabindex="-1">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title">이의신청 상세내용</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="mb-3">
                    <label class="form-label fw-bold">강의정보</label>
                    <div class="p-2 border rounded">
                        <div class="row">
                            <div class="col-md-6">
                                <p class="mb-1">강의명: 자바프로그래밍</p>
                                <p class="mb-1">교수명: 김교수</p>
                            </div>
                            <div class="col-md-6">
                                <p class="mb-1">신청일자: 2024-01-01</p>
                                <p class="mb-1">처리상태: <span class="badge bg-warning">대기중</span></p>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">신청내용</label>
                    <div class="p-2 border rounded">
                        <p>성적 이의신청합니다.</p>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label fw-bold">처리결과</label>
                    <div class="p-2 border rounded">
                        <p class="text-muted">아직 처리되지 않았습니다.</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">닫기</button>
            </div>
        </div>
    </div>
</div>

<script src="${pageContext.request.contextPath }/resources/js/attendcoeva/attendCoevaScript.js"></script>


