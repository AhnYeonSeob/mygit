<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>

<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@taglib uri="http://www.springframework.org/tags/form" prefix="form"%>
<%@taglib uri="http://java.sun.com/jsp/jstl/functions" prefix="fn" %>


<style>
/* 페이징처리 css  */
.pagination {
	display: flex;
	justify-content: center; /* 가로 방향 가운데 정렬 */
	list-style: none; /* 기본 리스트 스타일 제거 */
	padding: 0; /* 기본 패딩 제거 */
	margin: 0; /* 기본 마진 제거 */
}

.pagination li {
	margin: 0 5px; /* 각 페이지 번호 간격 */
}

.pagination a {
	text-decoration: none; /* 밑줄 제거 */
	color: #007bff; /* 링크 색상 */
}

.pagination a:hover {
	color: #0056b3; /* 호버 시 색상 */
}

.pagination .page-item.active a {
	font-weight: bold; /* 활성 페이지 강조 */
	color: #fff; /* 텍스트 색상 */
	background-color: #007bff; /* 배경 색상 */
	border-radius: 5px; /* 둥근 테두리 */
	padding: 5px 10px; /* 여백 */
}
</style>


<table class="table table-bordered">
	<tr>

		<div class="search-area" data-pg-target="#searchForm"
			data-pg-fn-name="fnPaging" style="text-align: right;">
			<form:select path="condition.searchType">

					<form:option value="title" label="전체" />
					<form:option value="title" label="제목" />
			</form:select>
			<form:input path="condition.searchWord" />
		<!-- 	<button class="search-btn">
			검색 
			</button> -->
			
			<button id="search-btn" class="btn btn-primary">검색</button>
		</div>

	</tr>
	<br>
	<thead align="center">
		<tr>                        
		<th style="width:50px">순번</th>
		<th style="width:200px">제목</th>
		<th style="width:90px">작성자</th>
		<th style="width:120px">작성일</th>
		<th style="width:20px">조회수</th>
		<tr>
	</thead>
	<tbody align="center">
		<c:if test="${not empty boardList}">

			<c:forEach items="${boardList}" var="board">


				<tr>

					<td>${board.rnum}</td>

					<td><a href="<c:url value='/systemBoard/${board.snbNo}'/>">${board.snbTtl}</a>


					</td>
					<td>${board.adminId}</td>
				<td>	${fn:split(board.snbDt, 'T')[0] } ${fn:split(board.snbDt, 'T')[1] }</td>
					<td>${board.snbCount}</td>
				</tr>
			</c:forEach>
		</c:if>
		<c:if test="${empty boardList}">
			<tr>
				<td colspan="6">글 없음.</td>
			</tr>
		</c:if>
	</tbody>

	<tfoot>
		<tr style="text-align: center;">
			<td colspan="6">
				<div class="paging-area">${pagingHTML }</div>

			</td>

		</tr>
		<tr>
		<td colspan="6">
			<div style="text-align: right;">
		
				 <a href="<c:url value='/systemBoard/createSystemBoard/new'/>" class="btn btn-primary">등록</a>
			</div>

		</td>
		</tr>
	</tfoot>


</table>




<form:form id="searchForm" method="get" modelAttribute="condition">
	<form:input path="searchType" />
	<form:input path="searchWord" />
	<input type="hidden" name="page" />
</form:form>


<script src="${pageContext.request.contextPath }/resources/js/utils/paging.js"></script>

