<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>

<body>
<div class="container mt-5">
    <h2 class="text-center mb-4">학생 논문 리스트</h2>

    <!-- 논문 테이블 -->
    <div class="table-responsive">
        <table class="table table-bordered">
            <thead>
                <tr>
                	
                    <th>No.</th>
                    <th>논문 제목</th>
                    <th>학생 번호</th>
                    <th>학생 이름</th>
                    <th>제출일자</th>
                    <th>상태</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <c:forEach var="paper" items="${papers}">
                    <tr>
                        <td>${paper.rnum}</td>
                        <td>
                        	<a href="${pageContext.request.contextPath }/graduationpaper/${paper.gpaCd}">${paper.gpaNm}</a>
                        </td>
                        <td>${paper.stuId}</td>
                        <td>${paper.studentNm}</td>
                        <td>${paper.gpaDate}</td>
                        <td>
                            <c:choose>
                                <c:when test="${paper.gpaStatus eq 'G003'}">대기</c:when>
                                <c:when test="${paper.gpaStatus eq 'G004'}">승인</c:when>
                                <c:when test="${paper.gpaStatus eq 'G005'}">반려</c:when>
                                <c:otherwise>알 수 없음</c:otherwise>
                            </c:choose>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-success" 
                                    onclick="changeStatus('${paper.gpaCd}', 'approve')">승인</button>
                            <button class="btn btn-sm btn-danger" 
                                    onclick="changeStatus('${paper.gpaCd}', 'reject')">반려</button>
                        </td>
                    </tr>
                </c:forEach>
                <c:if test="${empty papers}">
                    <tr>
                        <td colspan="5" class="text-center">등록된 논문이 없습니다.</td>
                    </tr>
                </c:if>
            </tbody>
        </table>
    </div>
</div>
</body>