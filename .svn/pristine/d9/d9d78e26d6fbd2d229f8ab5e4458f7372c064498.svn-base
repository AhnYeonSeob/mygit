<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/functions" prefix="fn"%>
<div class="container mt-4">
	<div class="card mb-4">
		<div class="card-header">
			<h5 class="mb-0">기본 정보</h5>
		</div>
		<div class="card-body">
			<table class="table table-bordered table-primary mt-4 mb-0 align-middle">
				<colgroup>
					<col style="width: 15%; min-width: 110px;">
					<col style="width: 35%;">
					<col style="width: 15%; min-width: 110px;">
					<col style="width: 35%;">
				</colgroup>
				<tbody>
					<tr>
						<th class="text-center">개설과목</th>
						<td class="bg-light">
							<select class="form-select" name="subNo">
								<option value="" label="과목을 선택하세요"/>
								<c:forEach items="${subjectList }" var="subject">
									<option value="${subject.subNo }" label="${subject.subNm }"/>
								</c:forEach>
							</select>
						</td>
						<th class="text-center">강의명</th>
						<td class="bg-light">
							<input class="form-control" name="lectNm" placeholder="강의명을 입력하세요"/>
						</td>
					</tr>
					<tr>
						<th class="text-center">학점</th>
						<td class="bg-light">
							<input type="number" class="form-control" name="lectScore"/>
						</td>
						<th class="text-center">모집인원</th>
						<td class="bg-light">
							<input type="number" class="form-control" name="lectEnNope"/>
						</td>
					</tr>
					<tr>
						<th class="text-center">강의학기</th>
						<td class="bg-light">
							<select class="form-select" name="semstrNo">
								<option value="" label="학기를 선택하세요"/>
								<c:forEach items="${semesterList }" var="semester">
									<option value="${semester.semstrNo }" label="${fn:substring(semester.semstrNo,0,4) }-${fn:substring(semester.semstrNo,4,6) }"/>
								</c:forEach>
							</select>
						</td>
						<th class="text-center">강의방식</th>
						<td class="bg-light" id="lectOnlineYn">
							<div class="form-check form-check-inline">
							  <input class="form-check-input" name="lectOnlineYn" type="radio" id="online" value="Y" checked>
							  <label class="form-check-label" for="online">온라인</label>
							</div>
							<div class="form-check form-check-inline">
							  <input class="form-check-input" name="lectOnlineYn" type="radio" id="offline" value="N">
							  <label class="form-check-label" for="offline">오프라인</label>
							</div>
						</td>
					</tr>
					<tr class="" id="schedule">
						<th class="text-center">강의실</th>
						<td class="bg-light">
							<select class="form-select" name="croomCd">
								<option value="" label="주 강의실을 선택하세요"/>
							</select>
						</td>
						<th class="text-center">강의시간</th>
						<td class="bg-light">
							<div class="dropdown">
								<button class="btn btn-secondary float-end" type="button" data-bs-toggle="dropdown" aria-expanded="false">시간표</button>
								<div class="dropdown-menu">
									<table class="table table-bordered text-center m-3">
										<thead>
											<tr>
												<th>교시</th>
												<c:forEach items="${dotwList }" var="dotw">
													<c:if test="${dotw.cocoCd ne 'SUN' }">
														<th>${dotw.cocoStts }</th>
													</c:if>
												</c:forEach>
											</tr>
										</thead>
										<tbody>
											<c:forEach items="${etimeList }" var="etime">
												<tr>
													<th>${etime.cocoStts }</th>
													<c:forEach items="${dotwList }" var="dotw">
														<c:if test="${dotw.cocoCd ne 'SUN' }">
															<td></td>
														</c:if>
													</c:forEach>
												</tr>
											</c:forEach>
										</tbody>
									</table>
								</div>
							</div>
						</td>
					</tr>
					<tr>
						<th class="text-center">강의설명</th>
						<td colspan="3" class="bg-light">
							<textarea class="form-control" placeholder="강의에 대한 설명을 입력하세요"></textarea>
						</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>
	
	<div class="card mb-4">
		<div class="card-header bg-light">
			<h2 class="h5 mb-0 d-inline">평가 비율</h2>
			<div class="float-end">
				<c:forEach items="${leesList }" var="lees">
					<div class="form-check form-check-inline">
					  <input class="form-check-input" name="evlStdrCd" type="checkbox" value="${lees.cocoCd }"
							onchange="fnLeesChange(this);" checked ${lees.cocoCd eq 'ATT' ? 'disabled' : '' }>
					  <label class="form-check-label" for="${fn:toLowerCase(lees.cocoCd) }">${lees.cocoStts }</label>
					</div>
				</c:forEach>
			</div>
		</div>
		<div class="card-body">
			<table class="table table-bordered table-primary mt-4 mb-0" style="table-layout: fixed;">
				<thead>
					<tr>
						<c:forEach items="${leesList }" var="lees">
							<th class="text-center ${fn:toLowerCase(lees.cocoCd) }">${lees.cocoStts }</th>
						</c:forEach>
						<th class="text-center">합계</th>
					</tr>
				</thead>
				<tbody class="table-light">
					<tr>
						<c:forEach items="${leesList }" var="lees">
							<td class="text-center ${fn:toLowerCase(lees.cocoCd) }">
								<div class="input-group">
									<input type="number" class="form-control leesNumber" onchange="fnLeesValueChange();" min="0" max="100"/>
									<span class="input-group-text">%</span>
								</div>
							</td>
						</c:forEach>
						<td class="text-center align-middle" id="leesSum">0 %</td>
					</tr>
				</tbody>
			</table>
		</div>
	</div>

	<div class="card mb-4">
		<div class="card-header bg-light">
			<h2 class="h5 mb-0">주차별 계획</h2>
		</div>
		<div class="card-body">
			<table class="table table-bordered table-primary mt-4 mb-0">
				<thead>
					<tr class="text-center align-middle">
						<th style="width: 80px;">주차</th>
						<th>내용</th>
					</tr>
				</thead>
				<tbody>
					<c:forEach items="${weekList }" var="week">
						<tr>
							<td class="text-center fw-bold align-middle">${week.cocoStts }</td>
							<td class="table-light">
								<input class="form-control" placeholder="${week.cocoStts } 계획을 입력하세요"/>
							</td>
						</tr>
					</c:forEach>
				</tbody>
			</table>
		</div>
	</div>
</div>
<script src="${pageContext.request.contextPath }/resources/js/lecture/lectureRequestForm.js"></script>
