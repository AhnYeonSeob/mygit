<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://www.springframework.org/tags/form" prefix="form" %>
<link href="https://cdn.jsdelivr.net/npm/sweetalert/dist/sweetalert.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/sweetalert/dist/sweetalert.min.js"></script>
<body>
    <h2 class="text-center">교직원 직업선호도검사 문제 리스트</h2>

    <table class="table align-middle">
        <thead class="text-center">
            <tr>
                <th >번호</th>
                <th>문항 유형</th>
                <th>검사 문항</th>
                <th>작업</th>
            </tr>
        </thead>
        <tbody>
            <c:forEach var="item" items="${list}">
                <tr>
                    <td class="text-center">${item.jobTestNo}</td>
                    <td class="text-center" data-key="cocoStts">${item.commoncode.cocoStts}</td>
                    <td class="" data-key="jobTestText">${item.jobTestText}</td>
                    <td class="d-flex justify-content-center">
                        <button type="button" class="btn btn-info data-update-btn" data-bs-dismiss="modal"  data-id="${item.jobTestNo}"  onclick="showPersonUpdate(${item.jobTestNo})">수정</button>
                        <button type="button" class="btn btn-danger" onclick="deleteRow(${item.jobTestNo})">삭제</button>
                    </td>
                </tr>
            </c:forEach>
        </tbody>
    </table>
    
    
    
    
<!-- 수정모달 -->
<div class="modal fade" id="jobTestUpdateModal" tabindex="-1" aria-labelledby="jobTestUpdateModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="jobTestUpdateModalLabel">문제 수정</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <form id="jobTestUpdateForm">
                    <input type="hidden" id="modalJobTestNo" name="jobTestNo">
                    <div class="mb-3">
                        <label for="modalJobTestText" class="form-label">문항</label>
                        <input type="text" class="form-control" id="modalJobTestText" name="jobTestText" required>
                    </div>
                    <div class="mb-3">
                        <label for="modalCocoStts" class="form-label">유형</label>
                        <input type="text" class="form-control" id="modalCocoStts" name="cocoStts" required>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">취소</button>
                <button type="button" class="btn btn-primary" onclick="updateJobTest()">저장</button>
            </div>
        </div>
    </div>
</div>
    





 		<input type="hidden" id="cp" value="${pageContext.request.contextPath }">
</body>
<script src="${pageContext.request.contextPath }/resources/js/jobtest/jobTestEmpList.js"></script>
