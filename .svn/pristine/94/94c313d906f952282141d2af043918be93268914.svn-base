const cp = document.getElementById("cp").value;
console.log(cp);

function showPersonUpdate(jobTestNo) {
    axios.get(`${cp}/jobtest/editform/${jobTestNo}`) 
        .then(resp => {
            const data = resp.data;

            // 모달 입력 필드에 데이터 채우기
            document.getElementById("modalJobTestNo").value = data.jobTestNo;
            document.getElementById("modalJobTestText").value = data.jobTestText;
            document.getElementById("modalCocoStts").value = data.cocoStts;

            // 모달 열기
            const jobTestUpdateModal = new bootstrap.Modal(document.getElementById('jobTestUpdateModal'));
            jobTestUpdateModal.show();
        })
        .catch(err => {
            console.error(err);
            alert("사용자 정보를 불러오는 데 실패했습니다.");
        });
}

