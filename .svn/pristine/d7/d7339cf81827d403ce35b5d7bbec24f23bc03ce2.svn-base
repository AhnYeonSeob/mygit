<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://www.springframework.org/tags/form" prefix="form" %>
<style>
    th {
        font-size: 15px; 
    }
	#button1 {
	  display: flex;
	  justify-content: flex-end;
	}
	
	#button1 button {
	  margin-left: 10px; /* 버튼 간 여백 추가 */
	}
</style>

<h4>사용자 목록 조회</h4>
<div id="button1">
    <button id="singleinsert-btn">단일 사용자 추가 </button>
    <button id="doubleinsert-btn">다중 사용자 추가 </button>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>아이디</th>
            <th>이름</th>
            <th>생년월일</th>
            <th>성별</th>
            <th>우편번호</th>
            <th>도로명주소</th>
            <th>상세주소</th>
            <th>핸드폰번호</th>
            <th>이메일</th>
            <th>이메일 수신동의 여부</th>
            <th>SMS 수신동의 여부</th>
            <th>인증수단코드</th>
            <th>마지막접속일시</th>
            <th>비밀번호틀린횟수</th>
            <th>프로필 사진</th>
        </tr>
    </thead>
    <tbody>
        <c:if test="${not empty list }">
            <c:forEach items="${list }" var="person">
                <tr>
                    <td>${person.id }</td>
                    <td>
                        <a href="javascript:void(0);" onclick="showPersonDetail('${person.id}')">${person.nm}</a>
                    </td>
                    <td>${person.brdt }</td>
                    <td>${person.sexdstnCd }</td>
                    <td>${person.zip }</td>
                    <td>${person.rdnmadr }</td>
                    <td>${person.daddr }</td>
                    <td>${person.mbtlnum }</td>
                    <td>${person.eml }</td>
                    <td>${person.emlRcptnAgreYn }</td>
                    <td>${person.smsRcptnAgreYn }</td>
                    <td>${person.crtfcMnCd }</td>
                    <td>${person.lastConectDe }</td>
                    <td>${person.pswdFailrCo }</td>
                    <td>${person.proflPhoto}</td>
                </tr>
            </c:forEach>
        </c:if>
        <c:if test="${empty list }">
            <tr>
                <td colspan="5">회원 없음.</td>
            </tr>
        </c:if>
    </tbody>
</table>






<!-- 상세조회 Modal -->
<div class="modal fade" id="personDetailModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl"> 
    <div class="modal-content">
      <div class="modal-header">
        <h1 class="modal-title fs-5" id="exampleModalLabel">사용자 상세 정보</h1>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="personDetailContent" style="max-height: 70vh; overflow-y: auto;">
<!--      	여기 데이터 -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">닫기</button>
  		<button type="button" id="update-Btn">수정</button>

        <button type="button" class="btn btn-primary">삭제</button>
      </div>
    </div>
  </div>
</div>

<!-- 상세추가modal -->



<script src="${pageContext.request.contextPath}/resources/js/person/person.js"></script>
