<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.yguniv.askAward.dao.AskAwardMapper">

<sql id="freeBoardColumns">
	SHAP_DOC_NO
	,SEMSTR_NO
   ,STU_ID
   ,AWARD_CD
   ,SHAP_RCPT_DATE
   ,SHAP_CHC_DATE
   ,SHAP_ACC_CD
   ,SHAP_NO_REASON
   ,ATCH_FILE_ID 
		
	</sql>

<resultMap type="AwardAskVO" id="boardMap" autoMapping="true">
		<id property="shapDocNo" column="SHAP_DOC_NO" jdbcType="VARCHAR"/>
		<result property="atchFileId" column="ATCH_FILE_ID" />
		<association property="atchFile" column="ATCH_FILE_ID"
			select ="kr.or.ddit.yguniv.atch.dao.AtchFileMapper.selectAtchFileEnable"/>
	</resultMap>
	


	<!-- 검색 조건 -->
	<sql id="searchFrag">
		<where>
			<if
				test="@org.apache.commons.lang3.StringUtils@isNotBlank(simpleCondition.searchWord)">
				<choose>
					<when test="simpleCondition.searchType eq 'title'">
						INSTR(SHAP_ACC_CD, #{simpleCondition.searchWord}) > 0
					</when>
					<when test="simpleCondition.searchType eq 'writer'">
						INSTR(STU_ID, #{simpleCondition.searchWord}) > 0
					</when>
					
					<otherwise>
						INSTR(SHAP_ACC_CD, #{simpleCondition.searchWord}) > 0
						OR INSTR(STU_ID, #{simpleCondition.searchWord}) > 0
						
					</otherwise>
				</choose>
			</if>
		</where>
	</sql>
	
<select id="selectTotalRecord" resultType="int">
 SELECT COUNT(SHAP_DOC_NO) FROM SCHOLARSHIP_APPLICATION
 <include refid="searchFrag"/>
</select>


<select id="selectAwardAskList" resultMap="boardMap">


SELECT B.*
FROM
(
SELECT ROWNUM RNUM, A.*
FROM

(
SELECT
 SHAP_DOC_NO
    ,SEMSTR_NO
   ,STU_ID
   ,AWARD_CD
   ,SHAP_RCPT_DATE
   ,SHAP_CHC_DATE
   ,SHAP_ACC_CD
   ,SHAP_NO_REASON
   ,ATCH_FILE_ID
FROM
    SCHOLARSHIP_APPLICATION
   <include refid="searchFrag" />
   ORDER BY SHAP_DOC_NO DESC
   )A
)B

<![CDATA[
		WHERE RNUM >= #{startRow} AND RNUM <= #{endRow}
		]]>

</select>

</mapper>