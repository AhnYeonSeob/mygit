<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
    
    
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@taglib uri="http://www.springframework.org/tags/form" prefix="form"%>
<%@taglib uri="http://java.sun.com/jsp/jstl/functions" prefix="fn" %>
<style>
/* 페이징처리 css  */
.pagination {
   display: flex;
   justify-content: center; /* 가로 방향 가운데 정렬 */
   list-style: none; /* 기본 리스트 스타일 제거 */
   padding: 0; /* 기본 패딩 제거 */
   margin: 0; /* 기본 마진 제거 */
}

.pagination li {
   margin: 0 5px; /* 각 페이지 번호 간격 */
}

.pagination a {
   text-decoration: none; /* 밑줄 제거 */
   color: #007bff; /* 링크 색상 */
}

.pagination a:hover {
   color: #0056b3; /* 호버 시 색상 */
}

.pagination .page-item.active a {
   font-weight: bold; /* 활성 페이지 강조 */
   color: #fff; /* 텍스트 색상 */
   background-color: #007bff; /* 배경 색상 */
   border-radius: 5px; /* 둥근 테두리 */
   padding: 5px 10px; /* 여백 */
}
</style>

<h4>시스템 문의 및 건의 게시판</h4>

<table class="table table-bordered">

      <tr>
      
            
            <div class="search-area" data-pg-target="#searchForm" data-pg-fn-name="fnPaging"
            style="text-align: right;">
               <form:select path="condition.searchType">
                  <form:option value="" label="전체" />
                  <form:option value="title" label="제목" />
                  <form:option value="writer" label="작성자" />
               </form:select>
               <form:input path="condition.searchWord"/>
               
               
               <button id="search-btn" class="btn btn-outline-primary">검색</button>
            </div>
         
      </tr>
      <br>


<thead align="center">
      <tr>
             
      <th style="width:40px">순번</th>
      <th style="width:250px" >문의제목</th>
      <th style="width:40px">회원아이디</th>
      <th style="width:100px">문의등록일자</th>
      <th style="width:20px" >상태</th>
      <tr>
   </thead>


<tbody align="center">
      <c:if test="${not empty board}">

         <c:forEach items="${board}" var="board">

            <tr>

               <td>${board.rnum}</td>

               <td>${board.sibTtl}
               <td><a href="<c:url value='/answer/${board.sibNo}'/>">${board.userId}</a></td>


               </td>
               
               <td>${fn:split(board.sibDt, 'T')[0] } ${fn:split(board.sibDt, 'T')[1] }</td>
               <td>${board.sibSttsYn}</td>
               
            </tr>
         </c:forEach>
      </c:if>
      
      <c:if test="${empty board}">
         <tr>
            <td colspan="8">글 없음.</td>
         </tr>
      </c:if>
   
   
   
   </tbody>
   
   <tfoot>
      <tr style="text-align: center;">
         <td colspan="8">
            <div class="paging-area">${pagingHTML }</div>

         </td>

      </tr>
      
      <tr>
      <td colspan="8">
         <div style="text-align: right;">
             <a href="<c:url value='/answer/createAnswerBoard/new'/>"
               class="btn btn-outline-primary">등록</a>
         </div>
      </td>
      </tr>
      
   </tfoot>


<tbody align="center">
   
   </tbody>

</table>

<form:form id="searchForm" method="get" modelAttribute="condition">
   <form:input path="searchType" />
   <form:input path="searchWord" />
   <input type="hidden" name="page" />
</form:form>



<script src="${pageContext.request.contextPath }/resources/js/utils/paging.js"></script>

