<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>

<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@taglib uri="http://www.springframework.org/tags/form" prefix="form"%>


<style>
/* 페이징처리 css  */
.pagination {
	display: flex;
	justify-content: center; /* 가로 방향 가운데 정렬 */
	list-style: none; /* 기본 리스트 스타일 제거 */
	padding: 0; /* 기본 패딩 제거 */
	margin: 0; /* 기본 마진 제거 */
}

.pagination li {
	margin: 0 5px; /* 각 페이지 번호 간격 */
}

.pagination a {
	text-decoration: none; /* 밑줄 제거 */
	color: #007bff; /* 링크 색상 */
}

.pagination a:hover {
	color: #0056b3; /* 호버 시 색상 */
}

.pagination .page-item.active a {
	font-weight: bold; /* 활성 페이지 강조 */
	color: #fff; /* 텍스트 색상 */
	background-color: #007bff; /* 배경 색상 */
	border-radius: 5px; /* 둥근 테두리 */
	padding: 5px 10px; /* 여백 */
}
</style>


<table class="table table-bordered">
	<tr>

		<div class="search-area" data-pg-target="#searchForm"
			data-pg-fn-name="fnPaging" style="text-align: right;">
			<form:select path="condition.searchType">

					<form:option value="title" label="제목" />
			</form:select>
			<form:input path="condition.searchWord" />
			<button type="button" class="search-btn">
			검색 
			</button>
		</div>

	</tr>
	<br>

	<thead align="center">
		<tr>

                                 <th><input type="checkbox" class="allCheck"></th>
                        
		<th>게시물순번</th>
		<th>제목</th>
		<th>작성자</th>
		<th>작성일</th>
		<th>조회수</th>
		<tr>
	</thead>
	<tbody align="center">
		<c:if test="${not empty boardList}">

			<c:forEach items="${boardList}" var="board">


				<tr>
<td>   <input type="checkbox" class="check"></td>

					<td>${board.rnum}
					</td>

					<td><a href="<c:url value='/systemBoard/${board.snbNo}'/>">${board.snbTtl}</a>


					</td>
					<td>${board.adminId}</td>
					<td>${board.snbDt}</td>
					<td>${board.snbCount}</td>
				</tr>
			</c:forEach>
		</c:if>
		<c:if test="${empty boardList}">
			<tr>
				<td colspan="6">글 없음.</td>
			</tr>
		</c:if>
	</tbody>

	<tfoot>
		<tr style="text-align: center;">
			<td colspan="6">
				<div class="paging-area">${pagingHTML }</div>

			</td>

		</tr>
		<tr>
		<td colspan="6">
			<div style="text-align: right;">
			   <button type="button" class="btn btn-primary">삭제</button>
				 <a href="<c:url value='/systemBoard/createSystemBoard/new'/>"
					class="btn btn-primary">새 글 쓰기</a>
			</div>

		</td>
		</tr>
	</tfoot>


</table>




<form:form id="searchForm" method="get" modelAttribute="condition">
	<form:input path="searchType" />
	<form:input path="searchWord" />
	<input type="hidden" name="page" />
</form:form>

<script>
var allCheck = document.querySelector(".allCheck");
var list = document.querySelectorAll(".check");

allCheck.onclick = () =>{
	
	if(allCheck.checked){
		for(var i = 0; i <list.length; i ++){
			list[i].checked = true; // 모든 체크박스 체크
		}
		
		
		
	}else{
		for (var i = 0; i<list.length; i ++){
			list[i].checked =false; // 모든 체크박스 체크 해제

		}
	}
}

var del = document.querySelector(".btn-primary");

del.onclick = () =>{
	
	for (var i = 0; i<list.length; i ++){
		if(list[i].checked){
			list[i].parentElement.parentElement.remove();  // 체크된 행 삭제
		}
	}

    // 삭제 후 리스트 재선택 (DOM 변경이 발생하므로 필요)
	list = document.querySelectorAll(".check");
}

</script>

<script
	src="${pageContext.request.contextPath }/resources/js/utils/paging.js"></script>


