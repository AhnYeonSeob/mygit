<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>

<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@taglib uri="http://www.springframework.org/tags/form" prefix="form"%>

<table class="table table-bordered">
	<thead>
		<tr>

			<div class="search-area" data-pg-target="#searchform" data-pg-fn-name="fnPaging" style="text-align: right;">
				<form:select path="condition.searchType">
					<form:option value="" label="전체" />
					<form:option value="title" label="제목" />
					<form:option value="content" label="내용" />
				</form:select>
				<form:input path="condition.searchWord" />
				<button class="search-btn">검색</button>
			</div>


			<th>번호</th>
			<th>제목</th>
			<th>내용</th>
			<th>작성자</th>
			<th>작성일</th>
			<th>조회수</th>
		</tr>
	</thead>
	<tbody>
		<c:if test="${not empty boardList}">

			<c:forEach items="${boardList}" var="board">


				<tr>
					<td><a
						href="<c:url value='/yguniv/systemBoard/${board.snbNo}'/>">${board.snbNo}</a>
					</td>
					<td>${board.adminId}</td>
					<td>${board.snbTtl}</td>
					<td>${board.snbCn}</td>
					<td>${board.snbDt}</td>
					<td>${board.snbCount}</td>
				</tr>
			</c:forEach>
		</c:if>
		<c:if test="${empty boardList}">
			<tr>
				<td colspan="6">글 없음.</td>
			</tr>
		</c:if>
	</tbody>

	<tfoot>
		<tr>
			<td colspan="6">
				<div class="paging-area" style="text-align: center;">
					${pagingHTML }
					
				</div>

			</td>
		</tr>
	</tfoot>


</table>
<div style="text-align: right;">
	<a href="<c:url value='/yguniv/systemBoard/createSystemBoard'/>"
		class="btn btn-primary">새 글 쓰기</a>
</div>


