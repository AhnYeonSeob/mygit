<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@ taglib uri="http://www.springframework.org/tags/form" prefix="form"%>
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>시험</title>
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- 추가 커스텀 스타일 -->
    <style>
        .list-group-item {
            cursor: pointer;
        }
        .position-fixed {
            z-index: 1000;
            background: white;
        }
    </style>
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <!-- 좌측 문제 네비게이션 -->
        <div class="col-md-2 position-fixed border-end" style="height: 100vh; overflow-y: auto;">
            <div class="p-3">
                <div class="row g-2">
                    <c:forEach items="${studentTestVo.questionVO}" var="que" varStatus="qNum">
                        <div class="col-4">
                            <button class="btn btn-outline-primary w-100" 
                                    style="min-width: 45px; height: 45px;"
                                    onclick="scrollToQuestion('question-${qNum.count}')">${qNum.count}</button>
                        </div>
                    </c:forEach>
                 <div style="background-color:red;"> 시간 출력될 박스</div>
                 <button type="button" class="btn btn-primary btn-lg" 
                                    onclick="showTestConfirm()">시험 제출</button>
                </div>
            </div>
        </div>

        <!-- 중앙 문제 영역 -->
        <div class="col-md-10 offset-md-2">
            <div class="card mt-4 mb-4">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">시험</h3>
                </div>
                <div class="card-body">
                    <form:form modelAttribute="newQuestion" method="POST" class="px-4">
                        <c:forEach items="${studentTestVo.questionVO}" var="que" varStatus="qNum">
                            <!-- 각 문제를 카드로 구성 -->
                            <div id="question-${qNum.count}" class="card mb-4">
                                <div class="card-header bg-light">
                                    <h4 class="mb-0">문제 ${qNum.count}</h4>
                                </div>
                                <div class="card-body">
                                    <p class="lead mb-4">${que.queDescr}</p>

                                    <!-- 객관식 문제 -->
                                    <c:if test="${que.queType eq '객관식'}">
                                        <div class="list-group">
                                            <c:forEach items="${que.answerVO}" var="ans" varStatus="aNum">
                                                <label class="list-group-item">
                                                    <input type="radio" class="form-check-input me-2" 
                                                           id="${que.queNo}" name="${que.queNo}" 
                                                           value="${aNum.count}">
                                                    ${aNum.count}. ${ans.anchDescr}
                                                </label>
                                            </c:forEach>
                                        </div>
                                    </c:if>

                                    <!-- 주관식 문제 -->
                                    <c:if test="${que.queType eq '주관식'}">
                                        <div class="mb-3">
                                            <input type="text" class="form-control" 
                                                   id="${que.queNo}" name="${que.queNo}">
                                        </div>
                                    </c:if>

                                    <!-- 서술형 문제 -->
                                    <c:if test="${que.queType eq '서술형'}">
                                        <div class="mb-3">
                                            <textarea class="form-control" rows="4" 
                                                      id="${que.queNo}" name="${que.queNo}"></textarea>
                                        </div>
                                    </c:if>
                                </div>
                            </div>
                        </c:forEach>

                        <div class="d-grid gap-2 col-6 mx-auto mt-4">
                            <button type="button" class="btn btn-primary btn-lg" 
                                    onclick="showTestConfirm()">시험 제출</button>
                        </div>
                    </form:form>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
<script>
function scrollToQuestion(questionId) {
    document.getElementById(questionId).scrollIntoView({ behavior: 'smooth' });
}
</script>
</body>
</html>