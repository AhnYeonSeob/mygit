package kr.or.ddit.yguniv.login.controller;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Controller;
import org.springframework.ui.Model;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.ModelAttribute;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;

import kr.or.ddit.yguniv.login.service.PersonService;
import kr.or.ddit.yguniv.vo.PersonVO;

@Controller
@RequestMapping("findLogin")
public class FindMyLogin {
	
	public static final String MODELNAME ="person";
	
	
	@Autowired
	public PersonService service;
	
	
	@ModelAttribute(MODELNAME)
	public PersonVO person() {
		return new PersonVO();
	}
	
	@GetMapping("findId")
	public String selectFindForm (
			@RequestParam String nm,
			@RequestParam String brdt,
			
		@ModelAttribute (MODELNAME) PersonVO person ,
			Model model 
			
			) {
		try {
			person.setNm(nm);
			person.setBrdt(brdt);
			//PersonVO id = service.findId(person);
		}catch (Exception e) {
			model.addAttribute("error", "오류가 발생했습니다.");
		}
		return "login/findIdForm";
	}

	@PostMapping("findId")
	public String selectFindId() {
		return "mypage/myPageForm";
	}
	
}
