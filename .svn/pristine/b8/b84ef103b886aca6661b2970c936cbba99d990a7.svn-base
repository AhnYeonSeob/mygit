<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %> 
<h4>학사일정리스트</h4>
<table class="table table-bordered">
	<thead>
		<tr>
			<th>공지번호</th>
			<th>제목</th>
			<th>시작일자</th>
			<th>종료일자</th>
			<th>조회수</th>
		</tr>
	</thead>
	<tbody>
		<c:if test="${not empty boardList }">
			<c:forEach items="${boardList }" var="board">
				<tr>
					<td>${board.ntcCd }</td>
					<td>
						<!-- a태그 안 url 수정해야함 -->
						<a href="<c:url value='/board/${board.boNo }'/>">${board.nctNm }</a>
					</td>
					<td>${board.ntcDt }</td>
					<td>${board.ntcEt }</td>
					<td>${board.inqCnt }</td>
				</tr>
			</c:forEach>
		</c:if>
		<c:if test="${empty boardList }">
			<tr>
				<td colspan="5">글 없음.</td>
			</tr>
		</c:if>
	</tbody>
	<tfoot>
		<!-- 검색 페이징 area -->
	</tfoot>
</table>
<!-- 권한에 따라 보일지말지 -->
<button>일정등록</button>