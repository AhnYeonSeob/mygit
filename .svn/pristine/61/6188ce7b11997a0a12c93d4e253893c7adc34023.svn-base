<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %> 
<h4>프로젝트리스트</h4>
<table class="table table-bordered">
	<thead>
		<tr><th>프로젝트과제번호</th>
			<th>과제주제</th>
			<th>과제제출마감일
			<th>제출여부</th>
		</tr>
	</thead>
	<tbody>
		<c:if test="${not empty taskList }">
			<c:forEach items="${taskList }" var="task">
				<tr>
					<td>${task.taskNo }</td>
					<td>
						<!-- a태그 안 url 수정해야함 -->
						<a href="<c:url value='/board/${board.boNo }'/>">${task.taskTitle }</a>
					</td>
					<td>$task.taskEt }</td>
					<td>${task.taskYn }</td>
				</tr>
			</c:forEach>
		</c:if>
		<c:if test="${empty taskList }">
			<tr>
				<td colspan="4">글 없음.</td>
			</tr>
		</c:if>
	</tbody>
	<tfoot>
		<!-- 검색 페이징 area -->
	</tfoot>
</table>
<!-- 권한에 따라 보일지말지 -->
<button>프로젝트과제등록</button>