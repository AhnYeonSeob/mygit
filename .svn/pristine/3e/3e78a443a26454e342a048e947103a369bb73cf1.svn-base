package kr.or.ddit.yguniv.projectchatroom.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestMapping;

@Controller
@RequestMapping("/yguniv/projectChatRoom")
public class ProjectChatRoomController {
	
	//팀채팅방 목록조회
	@GetMapping()
	public String selectList() {
		
		return "projectChatRoom/projectChatRoomList";
	}
	
	//팀채팅방 상세조회
	@GetMapping("{projectChatRoomNo}")
	public String select(@PathVariable()int projectChatRoomNo) {
		
		return "projectChatRoom/projectChatRoomDetail";
	}
	//팀채팅방 생성폼 이동
	@GetMapping("new")
	public String createForm() {
		
		return "projectChatRoom/projectChatRoomForm";
	}
	
	
	//팀채팅방 생성
	@PostMapping("{projectChatRoomNo}")
	public String create(@PathVariable()int projectChatRoomNo) {
		
		return "projectChatRoom/?";
	}
	
	//팀채팅방 수정폼이동
	@GetMapping("{projectChatRoomNo}/edit")
	public String updateForm(@PathVariable()int projectChatRoomNo) {
		
		
		return "projectChatRoom/projectChatRoomEditForm";
	}
	
	//팀채팅방 수정
	@PutMapping("{projectChatRoomNo}")
	public String update(@PathVariable()int projectChatRoomNo) {
		
		
		return "projectChatRoom/?";
	}
	
	//팀채팅방 삭제
	@DeleteMapping("{projectChatRoomNo}")
	public String delete(@PathVariable()int projectChatRoomNo) {
		
		
		return "projectChatRoom/projectChatRoomList";
	}
		
}
