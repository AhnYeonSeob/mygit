      const atndStts = tr.getAttribute('data-atnd-stts');
      const weekCd = tr.getAttribute('data-week-cd');
      
	console.log(lectOrder);
	console.log(atndStts);
	console.log(weekCd);

      // 비동기 요청을 통해 데이터를 받아옵니다.
