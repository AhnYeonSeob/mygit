package kr.or.ddit.yguniv.assignmentSubmission.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestMapping;

/**
 * @author AYS
 * lvn에 ?는 디테일로 갈 수 있게 해당넘버를 붙여줘야함
 */
@Controller
@RequestMapping("/lecture/{lectNo}/assignmentSubmission")
public class AssignmentSubmissionController {

	//제출과제전체조회(검색어 있는지 없는지)교수
	@GetMapping("all")
	public String selectList(@PathVariable()int courCd) {
			
		return "lecture/materials/assignmentSubmission/assignmentSubmissionList";
	}
	//제출과제전체조회(검색어 있는지 없는지)
	@GetMapping("{id}")
	public String selectMyList(@PathVariable()int courCd) {
		
		return "lecture/materials/assignmentSubmission/assignmentSubmissionList";
	}
	//과제 생성폼이동
	@GetMapping("new")
	public String createForm() {
		return "lecture/materials/assignmentSubmission/assignmentSubmissionForm";
	}

	
	//제출과제 생성
	@PostMapping()
	public String create() {
		return "lecture/materials/assignmentSubmission/?";
	}
	
	//제출과제상세조회
	@GetMapping("{assigCd}")
	public String select(@PathVariable()int assigCd) {
		
		return "lecture/materials/assignmentSubmission/assignmentSubmissionDetail";
	}
	
	//과제수정폼이동
	@GetMapping("{assigCd}/edit")
	public String updateForm() {
		
		return "lecture/materials/assignmentSubmission/assignmentSubmissionEditForm";
	}
	
	
	//제출과제수정
	@PutMapping("{assigCd}")
	public String update(@PathVariable()int assigCd) {
		
		return "lecture/materials/assignmentSubmission/?";
	}
	
	//제출과제삭제
	@DeleteMapping("{assigCd}")
	public String delete(@PathVariable()int assigCd) {
		
		return "lecture/materials/assignmentSubmission/assignmentSubmissionList";
	}

}
