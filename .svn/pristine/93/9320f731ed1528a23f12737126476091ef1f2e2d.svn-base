<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<%@ taglib uri="http://www.springframework.org/tags/form" prefix="form"%>
<%@ taglib uri="http://www.springframework.org/tags" prefix="spring"%>



<table class="table table-bordered">
       
   
        <thead>
        
        <tr> 
            <td colspan="6">${systemBoard.snbNo}</td>
        </tr>
        <tr>
            <td colspan="6">${systemBoard.snbTtl}</td>
        </tr>
    </thead>
    
    <tbody>
    
      <tr> 
            <td>${systemBoard.adminId} </td>
            <td>${systemBoard.snbDt}</td>
            <td>${systemBoard.snbCount}</td>
        </tr>
        <tr> 
            <td colspan="6">${systemBoard.snbCn}</td>
        </tr>
       
       
       <tr>
		<td colspan="6">
		
		<c:forEach items="${systemBoard.atchFile.fileDetails }" var="fd" varStatus="vs">
				
				
				<c:url value='/board/${systemBoard.snbNo}/atch/${fd.atchFileId}/${fd.fileSn}' var="downUrl"/>
				
				<a href="${downUrl }">${fd.orignlFileNm }(${fd.fileFancysize })</a>
				${not vs.last ? '|' : ''}
			</c:forEach>
			
			<c:if test="${empty systemBoard.atchFile.fileDetails}">
		    첨부파일없음
		</c:if>
			
		</td>
	</tr>

</tbody>
                
             
</table>
<a href="<c:url value='/yguniv/systemBoard/${snbNo}/edit' />" class="btn btn-primary">수정</a>



<a href="<c:url value='/yguniv/systemBoard' />" class="btn btn-primary">목록</a>

