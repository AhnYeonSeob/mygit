package kr.or.ddit.yguniv.person.dao;

import java.util.List;

import org.apache.ibatis.annotations.Mapper;
import org.apache.ibatis.annotations.Param;

import kr.or.ddit.yguniv.commons.enumpkg.ServiceResult;
import kr.or.ddit.yguniv.vo.EmployeeVO;
import kr.or.ddit.yguniv.vo.PersonVO;
import kr.or.ddit.yguniv.vo.ProfessorVO;

@Mapper
public interface PersonMapper {

    /**
     * 사용자 추가
     * @param person 사용자 정보
     */
    public Integer insertPerson(PersonVO person);

    /**
     * 사용자 상세조회
     * @param id 사용자 ID
     * @return 사용자 정보
     */
    public PersonVO selectPerson(@Param("id") String id);

    /**
     * 사용자 전체 리스트 조회
     * @return 사용자 리스트
     */
    public List<PersonVO> selectPersonList();

    /**
     * 사용자 수정
     * @param person 사용자 정보
     * @return 수정 결과
     */
    public ServiceResult updatePerson(PersonVO person);

    /**
     * 사용자 삭제
     * @param id 사용자 ID
     * @return 삭제 결과
     */
    public int deletePerson(String id);

    /**
     * 교수 정보 삽입
     * @param professor 교수 정보
     */
    public Integer insertPersonAndProfessor(PersonVO person);
    
    /**
     * 교수 정보 삽입
     * @param professor 교수 정보
     */
    public ServiceResult insertProfessor(ProfessorVO professor);
    
    /**
     * 교직원 정보 삽입
     * @param employee
     * @return
     */
    public ServiceResult insertEmployee(EmployeeVO employee);
}

