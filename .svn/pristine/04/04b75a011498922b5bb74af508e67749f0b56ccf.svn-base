 function deletePost(sibNo) {
    if (confirm("정말 삭제하시겠습니까?")) {
        fetch(contextPath+`/answer/deleteBo/${sibNo}`, { // 정확한 경로 확인
            method: "POST",
            headers: {
                "Content-Type": "application/json"
            }
        })
        .then(response => {
            if (response.ok) {
                alert("게시글이 삭제되었습니다.");
                window.location.href = "/yguniv/answer"; // 목록으로 이동
            } else {
                response.text().then(msg => alert("삭제 실패: " + msg));
            }
        })
        .catch(error => {
            console.error("Error:", error);
            alert("오류가 발생했습니다. 다시 시도해주세요.");
        });
    }
}