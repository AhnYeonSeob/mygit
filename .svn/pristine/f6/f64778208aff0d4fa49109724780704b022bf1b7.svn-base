<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %> 
과제리스트
<table class="table table-bordered">
	<thead>
		<tr><th>과제번호</th>
			<th>강의번호</th>
			<th>과제명</th>
			<th>배점</th>
			<th>등록일자</th>
		</tr>
	</thead>
	<tbody>
		<c:if test="${not empty assignmentList }">
			<c:forEach items="${assignmentList }" var="assignment">
				<tr>
					<td>${assignment.assigNo }</td>
					<td>${assignment.lectNo }</td>
					<td>
						<!-- a태그 안 url 수정해야함 -->
						<a href="<c:url value='/board/${board.boNo }'/>">${assignment.assigNm }</a>
					</td>
					<td>$assignment.assigScore }</td>
					<td>${assignment.assigDate }</td>
				</tr>
			</c:forEach>
		</c:if>
		<c:if test="${empty assignmentList }">
			<tr>
				<td colspan="5">글 없음.</td>
			</tr>
		</c:if>
	</tbody>
	<tfoot>
		<!-- 검색 페이징 area -->
	</tfoot>
</table>
<!-- 권한에 따라 보일지말지 -->
<button>과제등록</button>