    function deletePost(sibNo) {
        if (confirm("삭제하시겠습니까?")) {
            fetch(`delete/${sibNo}`, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                
                }
            })
            .then(response => {
                if (response.ok) {
                    alert("게시글이 삭제되었습니다.");
                   window.location.href = "${pageContext.request.contextPath}/answer";
                } else {
                    return response.text().then(error => {
                        alert("삭제 실패: " + error);
                    });
                }
            })
            .catch(error => {
                alert("오류가 발생했습니다. 다시 시도해주세요.");
                console.error("Error:", error);
            });
        }
    }
