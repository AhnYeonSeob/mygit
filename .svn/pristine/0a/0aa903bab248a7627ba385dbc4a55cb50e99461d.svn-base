	<insert id="insertLectureRequest"></insert>
	<update id="updateLectureRequest"></update>
	<delete id="deleteLectureRequest"></delete>
	
	<update id="lectureRequestConsent"></update>
	<update id="lectureRequestReturn"></update>
	
