<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.mybatis.mappers.AttendeeMapper">
<sql id="columns">
	LECT_NO  	/*강의번호*/
	,STU_ID		/*학생번호*/
	,ATTEN_ATND_SCORE		/*출석점수*/
	,ASSIG_SCORE		/*과제종합점수*/
	,TEST_SCORE		/*시험종합점수*/
	,ATTEN_SCORE		/*성적*/
	,ATTEN_COEVA		/*강의평가*/
</sql>

<select id="selectAttendeeList" resultType="AttendeeVO">
	SELECT 
	<include refid="columns" />
	FROM	ATTENDEE	 
</select>

<select id="selectListAttendeeWithLecture" resultType="AttendeeVO">
	SELECT
	<include refid="columns" />
	FROM ATTENDEE
	WHERE LECT_NO = #{lectNo}
</select>

<select id="selectAttendee" resultType="AttendeeVO">
	SELECT
	<include refid="columns" />
	FROM ATTENDEE
	WHERE
		LECT_NO = #{lectNo}
	AND STU_ID = #{stuId}
</select>

<select id="countAttendee" resultType="int">
	SELECT COUNT(*)
	FROM
		ATTENDEE
	WHERE LECT_NO = #{lectNo}
</select>

</mapper>