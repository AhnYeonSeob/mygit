<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://www.springframework.org/tags/form" prefix="form" %>
<style>
/* 페이징처리 css  */
.pagination {
    display: flex;
    justify-content: center; /* 가로 방향 가운데 정렬 */
    list-style: none; /* 기본 리스트 스타일 제거 */
    padding: 0; /* 기본 패딩 제거 */
    margin: 0; /* 기본 마진 제거 */
}
.pagination li {
    margin: 0 5px; /* 각 페이지 번호 간격 */
}
.pagination a {
    text-decoration: none; /* 밑줄 제거 */
    color: #007bff; /* 링크 색상 */
}
.pagination a:hover {
    color: #0056b3; /* 호버 시 색상 */
}
.pagination .page-item.active a {
    font-weight: bold; /* 활성 페이지 강조 */
    color: #fff; /* 텍스트 색상 */
    background-color: #007bff; /* 배경 색상 */
    border-radius: 5px; /* 둥근 테두리 */
    padding: 5px 10px; /* 여백 */
}
</style>


<h2>학사일정리스트</h2>
<table class="table table-bordered">
	<thead>
		<tr>
			<th>공지번호</th>
			<th>제목</th>
			<th>시작일자</th>
			<th>종료일자</th>
			<th>조회수</th>
		</tr>
	</thead>
	<tbody>
		<c:if test="${not empty boardList }">
			<c:forEach items="${boardList }" var="board">
				<tr>
					<td>${board.rnum }</td>
					<td>
						<!-- a태그 안 url 수정해야함 -->
						<a href="<c:url value='/noticeboard/${board.ntcCd }'/>">${board.ntcNm }</a>
					</td>
					<td>${board.ntcDt }</td>
					<td>${board.ntcEt }</td>
					<td>${board.ntcInqCnt }</td>
				</tr>
			</c:forEach>
		</c:if>
		<c:if test="${empty boardList }">
			<tr>
				<td colspan="5">글 없음.</td>
			</tr>
		</c:if>
	</tbody>
	<tfoot>
		<!-- 검색 페이징 area -->
		<tr align="center">
			<td colspan="5">
				<div class="paging-area">
					${pagingHTML }
				</div>
				<div class="search-area" data-pg-target="#searchForm" data-pg-fn-name="fnPaging">
					<form:select path="condition.searchType">
						<form:option value="" label="전체" />
						<form:option value="title" label="제목" />
						<form:option value="writer" label="작성자" />
					</form:select>
					<form:input path="condition.searchWord"/>
					<button class="search-btn">검색</button>
				</div>
			</td>
		</tr>
	</tfoot>
</table>
<!-- 권한에 따라 보일지말지 -->
<a href="<c:url value='/noticeboard/new'/>" class="btn btn-primary">일정등록</a>

 
<script src="${pageContext.request.contextPath }/resources/js/utils/paging.js"></script>
