package kr.or.ddit.yguniv.introduce.controller;

import org.springframework.stereotype.Controller;
import org.springframework.web.bind.annotation.DeleteMapping;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.PutMapping;
import org.springframework.web.bind.annotation.RequestMapping;


@Controller
@RequestMapping("/yguniv/introduce")
public class IntroduceController {
	// form으로 보냄
		@GetMapping("new")
		public String createForm() {
			return "introduce/introduceForm";
		}

		// 전체조회
		@GetMapping()
		public String selectlist() {

			return "introduce/introduceList";
		}

		// 생성
		@PostMapping()
		public String create() {
			return "introduce/introduceDetail";
		}

		// 상세조회
		@GetMapping("{stuId}")
		public String select(@PathVariable() String stuId) {

			return "introduce/introduceDetail";
		}

		// 수정
		@PutMapping("{stuId}")
		public String update(@PathVariable() String stuId) {
			return "introduce/introduceDetail";
		}

		// 삭제
		@DeleteMapping("{stuId}")
		public String delete(@PathVariable() String stuId) {
			return "introduce/introduceList";
		}
}
