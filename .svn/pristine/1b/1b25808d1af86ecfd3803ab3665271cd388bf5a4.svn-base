<%@ page language="java" contentType="text/html; charset=UTF-8"
	pageEncoding="UTF-8"%>


<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c"%>
<h4>학생한테 보여지는 장학금 유형 조회</h4>

<table class="table table-bordered">

<style>
body {
	font-family: Arial, sans-serif;
	margin: 20px;
}

.container {
	display: flex;
	flex-direction: column;
	align-items: center;
}

.institutions {
	margin-bottom: 20px;
}

.institutions button {
	margin: 5px;
	padding: 10px;
	border: 1px solid #ddd;
	background-color: #f0f0f0;
	cursor: pointer;
}

.institutions button:hover {
	background-color: #ddd;
}

.details {
	display: none;
	border: 1px solid #ddd;
	border-radius: 8px;
	padding: 20px;
	width: 80%;
	background-color: #f9f9f9;
}

table {
	width: 60%;
	margin: 20px auto;
	border-collapse: collapse;
}

th, td {
	border: 1px solid #ddd;
	padding: 10px;
	text-align: left;
}

th {
	background-color: #f9f9f9;
	width: 30%;
}

td {
	background-color: #fff;
	width: 70%;
}
</style>

	<body>
	
	
	 <!-- 버튼 영역 -->
    <div class="institutions">
        <span onclick="showDetails('기관1')">기관1</span>
        <span onclick="showDetails('기관2')">기관2</span>
        <span onclick="showDetails('기관3')">기관3</span>
    </div>
	
	
	 <!-- 세부 정보 테이블 -->
    <div id="details" style="display: none;">
        <h2 id="institution-name"></h2>
        <table>
            <tbody>
                <tr>
                    <th>장학금 이름</th>
                    <td id="institution-awardNm"></td>
                </tr>
                <tr>
                    <th>장학금 유형</th>
                    <td id="institution-awardType"></td>
                </tr>
                <tr>
                    <th>장학금 금액</th>
                    <td id="institution-awardGiveAmt"></td>
                </tr>
                <tr>
                    <th>장학금 설명</th>
                    <td id="institution-awardDetail"></td>
                </tr>
                <tr>
                    <th>장학금 혜택</th>
                    <td id="institution-awardBenefit"></td>
                </tr>
                <tr>
                    <th>제출 서류</th>
                    <td id="institution-awardDocument"></td>
                </tr>
            </tbody>
        </table>
    </div>


	</body>
</table>

<script
	src="${pageContext.request.contextPath }/resources/js/award/awardList.js"></script>


