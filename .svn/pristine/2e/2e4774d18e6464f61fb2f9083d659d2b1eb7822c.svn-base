<%@ page language="java" contentType="text/html; charset=UTF-8" pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core" prefix="c" %>
<%@ taglib uri="http://www.springframework.org/tags/form" prefix="form" %>
<style>
    th {
        font-size: 15px; 
    }
	#button1 {
	  display: flex;
	  justify-content: flex-end;
	}
	
	#button1 button {
	  margin-left: 10px; /* 버튼 간 여백 추가 */
	}
</style>

<h4>사용자 목록 조회</h4>
<div id="button1">
    <button id="singleinsert-btn">단일 사용자 추가 </button>
    <button id="doubleinsert-btn">다중 사용자 추가 </button>
</div>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>아이디</th>
            <th>이름</th>
            <th>생년월일</th>
            <th>성별</th>
            <th>우편번호</th>
            <th>도로명주소</th>
            <th>상세주소</th>
            <th>핸드폰번호</th>
            <th>이메일</th>
            <th>이메일 수신동의 여부</th>
            <th>SMS 수신동의 여부</th>
            <th>인증수단코드</th>
            <th>마지막접속일시</th>
            <th>비밀번호틀린횟수</th>
            <th>사용자 유형</th>
        </tr>
    </thead>
    <tbody>
        <c:if test="${not empty list }">
            <c:forEach items="${list }" var="person">
                <tr>
                    <td id="id">${person.id }</td>
                    <td id="id">
                        <a href="javascript:void(0);" onclick="showPersonDetail('${person.id}')">${person.nm}</a>
                    </td>
                    <td> ${person.brdt }</td>
                    <td>${person.sexdstnCd }</td>
                    <td>${person.zip }</td>
                    <td>${person.rdnmadr }</td>
                    <td>${person.daddr }</td>
                    <td>${person.mbtlnum }</td>
                    <td>${person.eml }</td>
                    <td>${person.emlRcptnAgreYn }</td>
                    <td>${person.smsRcptnAgreYn }</td>
                    <td>${person.crtfcMnCd }</td>
                    <td>${person.lastConectDe }</td>
                    <td>${person.pswdFailrCo }</td>
                    <td>${person.personType}</td>
                </tr>
            </c:forEach>
        </c:if>
        <c:if test="${empty list }">
            <tr>
                <td colspan="5">회원 없음.</td>
            </tr>
        </c:if>
    </tbody>
</table>






<!-- 상세정보 모달 -->
<div class="modal fade" id="personDetailModal" tabindex="-1" aria-labelledby="personDetailLabel" aria-hidden="true">
  <div class="modal-dialog modal-lg">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="personDetailLabel">사용자 상세 정보</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body" id="personDetailContent">
         <table class="table detail-table">
             <tbody>
             
						<tr>
							<th>아이디:</th>
							<td id="detail-id"></td>
						</tr>
						<tr>
							<th>이름:</th>
							<td id="detail-nm"></td>
						</tr>
						<tr>
							<th>생년월일:</th>
							<td id="detail-brdt"></td>
						</tr>
						<tr>
							<th>성별:</th>
							<td id="detail-sexdstnCd"></td>
						</tr>
						<tr>
							<th>우편번호:</th>
							<td id="detail-zip"></td>
						</tr>
						<tr>
							<th>도로명주소:</th>
							<td id="detail-rdnmadr"></td>
						</tr>
						<tr>
							<th>상세주소:</th>
							<td id="detail-daddr"></td>
						</tr>
						<tr>
							<th>핸드폰번호:</th>
							<td id="detail-mbtlnum"></td>
						</tr>
						<tr>
							<th>이메일:</th>
							<td id="detail-eml"></td>
						</tr>
						<tr>
							<th>이메일 수신 동의 여부:</th>
							<td id="detail-emlRcptnAgreYn"></td>
						</tr>
						<tr>
							<th>SMS 수신 동의 여부:</th>
							<td id="detail-smsRcptnAgreYn"></td>
						</tr>
						<tr>
							<th>인증수단코드:</th>
							<td id="detail-crtfcMnCd"></td>
						</tr>
						<tr>
							<th>마지막 접속 일시:</th>
							<td id="detail-lastConectDe"></td>
						</tr>
						<tr>
							<th>비밀번호 실패 횟수:</th>
							<td id="detail-pswdFailrCo"></td>
						</tr>
						<tr>
							<th>프로필 사진:</th>
							<td id="detail-proflphoto"><img src="" alt="프로필 사진"
								class="profile-img"></td>
						</tr>
						<tr>
							<th>사용자 유형</th>
							<td id="detail-personType"></td>
						</tr>
	  <!-- 교수일 경우 추가 정보 -->
                <tr>
                    <th>학과:</th>
                    <td id="detail-deptNo"></td>
                </tr>
                <tr>
                    <th>직위:</th>
                    <td id="detail-profeType"></td>
                </tr>

           
					</tbody>
         </table>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">닫기</button>
        <button type="button" class="btn-update" data-bs-dismiss="modal"  data-id="${person.id}"  onclick="showPersonUpdate(document.getElementById('detail-id').textContent)">수정</button>
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">삭제</button>
      </div>
    </div>
  </div>
</div>

<!-- 수정하기 Modal -->
