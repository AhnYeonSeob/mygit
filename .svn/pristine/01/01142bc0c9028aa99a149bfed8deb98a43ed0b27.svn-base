<%@ page language="java" contentType="text/html; charset=UTF-8"
    pageEncoding="UTF-8"%>
<%@ taglib uri="http://java.sun.com/jsp/jstl/core"  prefix="c"%>
<!DOCTYPE html>
<html>

<style>
.table th.bg-light {
    background-color: #f8f9fa !important;
    font-weight: 600;
}

.table td, .table th {
    padding: 0.75rem;
    vertical-align: middle;
}

.card-header {
    border-bottom: 1px solid rgba(0,0,0,.125);
}
</style>

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>강의계획서</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div id="contextData" data-context-path="${pageContext.request.contextPath}" >
        <input type="hidden" id="lectNo" name="lectNo" value="${lectNo }">
    </div>

<c:if test="${empty lectVo }">
	등록된 강의계획서가 없습니다.
</c:if>
<c:if test="${not empty lectVo }">

 <div class="container mt-4">
    <!-- 기본 정보 -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">기본 정보</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th class="bg-light" style="width: 20%">교과목명</th>
                            <td style="width: 30%">${lectVo.lectNm }</td>
                            <th class="bg-light">이수구분</th>
                            <td>${lectVo.subjectVO.subFicdCd }</td>
                        </tr>
                        <tr>
                            <th class="bg-light">학점</th>
                            <td>${lectVo.lectScore }</td>
                            <th class="bg-light">수강학년</th>
                            <td>${lectVo.subjectVO.gradeCd }</td>
                        </tr>
                        <tr>
                            <th class="bg-light">수강인원</th>
                            <td>${lectVo.lectEnNope } 명</td>
                            <th class="bg-light">총 차수</th>
                            <td>${lectVo.lectSession } 차수</td>
                        </tr>
                        <tr>
 							<th class="bg-light">개설학과</th>
                            <td>${lectVo.subjectVO.departmentVO.deptNm }</td>
                            <th class="bg-light">강의실 및 시간</th>
                            <c:if test="${lectOnlineYn eq 'Y' }">
	                            <td>온라인 강의</td>                                                        
                            </c:if>
                            <c:if test="${lectOnlineYn ne 'Y' }">
    	                        <td>${lectVo.scheduleVO[0].classRoomVO.croomPstn } / ${lectVo.joinSchedule }</td>                            
                            </c:if>
                        </tr>
                        
                        <tr>
 							<th class="bg-light" colspan="1">강의 설명</th>
                            <td colspan="3">${lectVo.lectDescr }</td>
                           
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>

    <!-- 담당 교수 정보 -->
    <div class="card mb-4">
        <div class="card-header bg-light">
            <h5 class="mb-0">담당 교수 정보</h5>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered">
                    <tbody>
                        <tr>
                            <th class="bg-light" style="width: 20%">성명</th>
                            <td style="width: 30%">${lectVo.professorVO.nm }</td>
                            <th class="bg-light" style="width: 20%">소속</th>
                            <td style="width: 30%">${lectVo.subjectVO.departmentVO.deptNm }</td>
                        </tr>
                        <tr>
                            <th class="bg-light">이메일</th>
                            <td>${lectVo.professorVO.eml }</td>
                            <th class="bg-light">연락처</th>
                            <td>${lectVo.professorVO.mbtlnum }</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>


        <!-- 평가 방법 섹션 -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h2 class="h5 mb-0">평가 방법</h2>
            </div>
            <div class="card-body">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                    <c:forEach items="${lectVo.lesVo }" var="les">
                            <th class="text-center">${les.evlStdrCd }</th>
                    </c:forEach>
                            <th class="text-center">합계</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr>
                    <c:forEach items="${lectVo.lesVo }" var="les">
                            <td class="text-center">${les.rate }</td>
                    </c:forEach>

                            <td class="text-center">100%</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>

        <!-- 주차별 계획 섹션 -->
        <div class="card mb-4">
            <div class="card-header bg-light">
                <h2 class="h5 mb-0">주차별 계획</h2>
            </div>
            <div class="card-body">
<!--                 <table class="table table-striped table-bordered table-hover"> -->
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th class="text-center" style="width: 10%">주차</th>
                            <th>내용</th>
                        </tr>
                    </thead>
                    <tbody>
                        <c:forEach items="${lectVo.weekVO }" var="week">
                            <tr>
                                <td class="text-center bg-light">${week.weekCd }</td>
                                <td>${week.lectPlan }</td>
                            </tr>
                        </c:forEach>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</c:if>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="${pageContext.request.contextPath}/resources/js/lecturecart/lecturePaperScript.js"></script>
</body>
</html>
